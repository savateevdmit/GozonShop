{
  "ReverseProxy": {
    "Routes": {
      "orders": {
        "ClusterId": "orders_cluster",
        "Match": { "Path": "/orders/{**catch-all}" }
      },
      "payments": {
        "ClusterId": "payments_cluster",
        "Match": { "Path": "/payments/{**catch-all}" }
      }
    },
    "Clusters": {
      "orders_cluster": {
        "Destinations": {
          "d1": { "Address": "http://orders:8080/" }
        }
      },
      "payments_cluster": {
        "Destinations": {
          "d1": { "Address": "http://payments:8080/" }
        }
      }
    }
  }
}